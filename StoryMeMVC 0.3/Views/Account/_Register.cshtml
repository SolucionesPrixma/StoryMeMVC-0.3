@model StoryMeMVC.Models.RegisterModel
<h2 class="font-thin">Registrate</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()



    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Correo Electronico" })
    <br />
    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Tu Nombre" })
    <br />
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
    <br />

    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña" })
    <br />
    <input type="submit" class="btn btn-primary"  value="Quiero Cuentar..." />

}




